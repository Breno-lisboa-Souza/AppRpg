<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppRpgEtec.Views.Usuarios.CadastroView"
             Title="CadastroView"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="ContentPage">
                <Setter Property="BackgroundColor" Value="{DynamicResource PageBackgroundColor}" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <VerticalStackLayout>
        <Button Text="Cor" Clicked="ChangeColor_Clicked" WidthRequest="60"  BackgroundColor="LightGray" Margin="0,15,0,0"/>
        <Entry Placeholder="Digite seu nome de usuÃ¡rio" Text ="{Binding Login}" 
                Margin="0,10,0,0" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" WidthRequest="350" BackgroundColor="GhostWhite">
        </Entry>

        <Entry Placeholder="Digite a senha" Text="{Binding Senha}" IsPassword="True" 
             Margin="0,10,0,0" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" WidthRequest="350" BackgroundColor="GhostWhite" >
        </Entry>

        <Button Text="Registrar" Command="{Binding RegistrarCommand}" Margin="0,10,0,0" WidthRequest="100"/>
    </VerticalStackLayout>
</ContentPage>